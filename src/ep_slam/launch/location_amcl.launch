<launch>
    <!-- 设置地图的配置文件 -->
    <arg name="map" default="map01.yaml" />
    <!-- 运行地图服务器，并且加载设置的地图-->
    <node name="map_server" pkg="map_server" type="map_server" args="$(find ep_slam)/map/$(arg map)"/>
    <!-- 启动AMCL节点 -->
    <include file="$(find ep_slam)/launch/include/amcl.launch" />
    <!-- 运行rviz -->
    <node pkg="rviz" type="rviz" name="rviz"/>
</launch>
